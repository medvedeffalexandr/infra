.SILENT: clean	
clean:
	echo "\n----------------------------------------------------------------------------------------" && \
	docker container prune -f && \
	docker rm -f docker-compose_db_1 || true && \
	docker rmi docker-compose_web:latest || true && \
	echo "\n----------------------------------------------------------------------------------------" && \
	docker images | head -n 10 && \
	echo "\n----------------------------------------------------------------------------------------" && \
	docker ps -a && \
	echo "\n----------------------------------------------------------------------------------------" && \
	ls -lhaF && \
	echo "----------------------------------------------------------------------------------------\n" 
	
